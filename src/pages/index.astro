---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1 class="dark:text-white">🧑‍🚀 Hello, Readers!</h1>
			<p class="dark:text-white">
				Welcome to the official <a href="https://astro.build/">Astro</a> blog starter template.
				This template serves as a lightweight, minimally-styled starting point for anyone looking
				to build a personal website, blog, or portfolio with Astro.
			</p>
		</main>
		<Footer />
	</body>
</html>
